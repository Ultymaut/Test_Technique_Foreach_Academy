{% extends "base.html.twig" %}

{% block title %}Page new excuse

{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="justify-content-center d-flex">
            <div class="alert alert-success mt-1 justify-content-center d-flex" style="width: 50%">
                <h5>
                    {{ message }}
                </h5>
            </div>
        </div>
    {% endfor %}


    <div class="container">

        <h1 class="mt-4 d-flex justify-content-center text-decoration-underline">
            Cr√©ation d'une excuse
        </h1>
        {{ form_start(form) }}
        <div class="row mt-5">
            <div class="col">
                {{ form_row(form.tag) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.tag) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.http_code) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.http_code) }}
                </div>
            </div>
        </div>


        <div class="row mt-5">
            <div class="col">
                {{ form_row(form.message) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.message) }}
                </div>
            </div>
        </div>

        <div>
            <div class="col d-flex justify-content-center">
                {{ form_row(form.submit) }}

            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}